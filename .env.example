# =============================================================================
# Mycosoft MAS - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in real values.
# NEVER commit .env to git. Only .env.example should be in version control.
# See docs/SECRET_MANAGEMENT_POLICY_FEB09_2026.md for full policy.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Settings
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///data/mycosoft.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_RELOAD=False

# -----------------------------------------------------------------------------
# Blockchain Settings
# -----------------------------------------------------------------------------
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
DAO_CONTRACT_ADDRESS=your-dao-contract-address
TOKEN_CONTRACT_ADDRESS=your-token-contract-address
IP_CONTRACT_ADDRESS=your-ip-contract-address

# -----------------------------------------------------------------------------
# Agent Settings
# -----------------------------------------------------------------------------
HEALTH_CHECK_INTERVAL=60
RETRY_INTERVAL=300
MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Machine Learning Settings
# -----------------------------------------------------------------------------
ML_DEVICE=cpu
ML_BATCH_SIZE=32

# -----------------------------------------------------------------------------
# Monitoring Settings
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
ENABLE_TRACING=False

# -----------------------------------------------------------------------------
# Corporate Settings (Clerky)
# -----------------------------------------------------------------------------
CLERKY_API_KEY=your-clerky-api-key
CLERKY_ORGANIZATION_ID=your-clerky-organization-id
BOARD_MEETING_SCHEDULER=your-board-meeting-scheduler-url
DOCUMENT_STORAGE_PATH=/data/corporate/documents

# -----------------------------------------------------------------------------
# Financial Settings (Mercury, QuickBooks, Pulley)
# -----------------------------------------------------------------------------
MERCURY_API_KEY=your-mercury-api-key
MERCURY_ACCOUNT_ID=your-mercury-account-id
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REFRESH_TOKEN=your-quickbooks-refresh-token
PULLEY_API_KEY=your-pulley-api-key
PULLEY_ORGANIZATION_ID=your-pulley-organization-id

# -----------------------------------------------------------------------------
# Communication Settings (Email, Telegram, Signal, Discord, Asana)
# -----------------------------------------------------------------------------
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
SIGNAL_PHONE_NUMBER=your-signal-phone-number
DISCORD_BOT_TOKEN=your-discord-bot-token
ASANA_API_KEY=your-asana-api-key
ASANA_WORKSPACE_ID=your-asana-workspace-id

# -----------------------------------------------------------------------------
# External Research APIs
# -----------------------------------------------------------------------------
INATURALIST_API_KEY=your-inaturalist-api-key
MYCOBANK_API_KEY=your-mycobank-api-key
FUNGIDB_API_KEY=your-fungidb-api-key
ATCC_API_KEY=your-atcc-api-key
RESEARCHHUB_API_KEY=your-researchhub-api-key
NIH_API_KEY=your-nih-api-key
SCIENCEDIRECT_API_KEY=your-sciencedirect-api-key
# NCBI API Key for GenBank/PubMed (10 req/sec instead of 3)
NCBI_API_KEY=your-ncbi-api-key

# -----------------------------------------------------------------------------
# MINDEX Database (sole database system - VM 192.168.0.189)
# -----------------------------------------------------------------------------
MINDEX_DATABASE_URL=postgresql://user:password@192.168.0.189:5432/mindex
MINDEX_API_URL=http://192.168.0.189:8000

# -----------------------------------------------------------------------------
# Blob Storage (NAS)
# -----------------------------------------------------------------------------
BLOB_STORAGE_PATH=/mnt/nas/mycosoft/mindex
BLOB_STORAGE_URL=http://192.168.0.189:8001/blobs

# -----------------------------------------------------------------------------
# ChemSpider API
# -----------------------------------------------------------------------------
CHEMSPIDER_API_KEY=your-chemspider-api-key
CHEMSPIDER_API_URL=https://api.rsc.org/compounds/v1

# -----------------------------------------------------------------------------
# Notion Integration
# -----------------------------------------------------------------------------
NOTION_API_KEY=your-notion-api-key
NOTION_DATABASE_ID=your-notion-database-id

# -----------------------------------------------------------------------------
# Infrastructure Credentials (used by scripts/)
# -----------------------------------------------------------------------------
# SSH credentials for VM access
VM_SSH_USERNAME=your-ssh-username
VM_SSH_PASSWORD=your-ssh-password

# Proxmox API
PROXMOX_HOST=your-proxmox-host-ip
PROXMOX_TOKEN=your-proxmox-api-token

# Cloudflare
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# n8n Workflow Automation
N8N_API_KEY=your-n8n-api-key
N8N_URL=http://192.168.0.188:5678

# GitHub (used by .mcp.json)
GITHUB_PAT=your-github-personal-access-token
