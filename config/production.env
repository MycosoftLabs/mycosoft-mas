# MYCA Production Environment Configuration
# This file configures the production environment on Proxmox VMs

# ==============================================
# ENVIRONMENT
# ==============================================
MAS_ENV=production
DEBUG_MODE=false
LOG_LEVEL=INFO

# ==============================================
# NAS STORAGE (UDM Pro 26TB)
# ==============================================
# NFS mount point on Linux VMs
NAS_STORAGE_PATH=/mnt/mycosoft
NAS_MOUNT_POINT=/mnt/mycosoft

# Specific paths
NAS_DATABASES_PATH=/mnt/mycosoft/databases
NAS_KNOWLEDGE_PATH=/mnt/mycosoft/knowledge
NAS_AGENTS_PATH=/mnt/mycosoft/agents
NAS_WEBSITE_PATH=/mnt/mycosoft/website
NAS_BACKUPS_PATH=/mnt/mycosoft/backups
NAS_AUDIT_PATH=/mnt/mycosoft/audit

# ==============================================
# DATABASES (Production)
# ==============================================
# PostgreSQL - NAS-backed storage
DATABASE_URL=postgresql://mas:${POSTGRES_PASSWORD}@localhost:5432/mas
POSTGRES_USER=mas
POSTGRES_DB=mas
POSTGRES_DATA=/mnt/mycosoft/databases/postgres

# Redis - NAS-backed storage
REDIS_URL=redis://localhost:6379
REDIS_DATA=/mnt/mycosoft/databases/redis

# Qdrant - NAS-backed storage
QDRANT_URL=http://localhost:6333
QDRANT_DATA=/mnt/mycosoft/knowledge/qdrant

# ==============================================
# INTEGRATION DATABASES
# ==============================================
# MINDEX - Species/knowledge search
MINDEX_DATABASE_URL=postgresql://mindex:${MINDEX_PASSWORD}@localhost:5432/mindex

# NatureOS - Earth simulator
NATUREOS_API_URL=http://localhost:8002

# ==============================================
# AI SERVICES (CPU Only in Production)
# ==============================================
# LiteLLM proxy for external LLM APIs
LLM_BASE_URL=http://localhost:4000
LLM_DEFAULT_PROVIDER=openai_compatible

# Whisper - CPU mode
WHISPER_URL=http://localhost:8765
WHISPER_MODEL=base.en
WHISPER_DEVICE=cpu

# TTS
TTS_URL=http://localhost:5500

# ==============================================
# N8N WORKFLOW AUTOMATION
# ==============================================
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_URL=http://localhost:5678/api/v1
N8N_BASIC_AUTH_ACTIVE=true

# ==============================================
# VOICE SERVICES
# ==============================================
VOICE_ENABLED=true
VOICE_DEFAULT_ENGINE=elevenlabs
ELEVENLABS_VOICE_ID=aEO01A4wXwd1O8GPgGlF

# ==============================================
# SECURITY
# ==============================================
# JWT settings
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=3600

# CORS
CORS_ORIGINS=https://mycosoft.com,https://www.mycosoft.com

# SSL
SKIP_SSL_VERIFY=false

# ==============================================
# PROXMOX INTEGRATION
# ==============================================
PROXMOX_HOST_BUILD=192.168.0.202
PROXMOX_HOST_DC1=192.168.0.2
PROXMOX_HOST_DC2=192.168.0.131
PROXMOX_PORT=8006

# ==============================================
# UNIFI INTEGRATION
# ==============================================
UNIFI_HOST=192.168.0.1
UNIFI_PORT=443

# ==============================================
# WEBSITE
# ==============================================
WEBSITE_URL=https://mycosoft.com
WEBSITE_API_URL=https://mycosoft.com/api

# ==============================================
# MONITORING
# ==============================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# ==============================================
# AGENT CONFIGURATION
# ==============================================
AGENT_CYCLE_INTERVAL=300
AGENT_MAX_PARALLEL=10
AGENT_STORAGE_PATH=/mnt/mycosoft/agents

# ==============================================
# AUDIT LOGGING
# ==============================================
AUDIT_ENABLED=true
AUDIT_LOG_PATH=/mnt/mycosoft/audit/logs
AUDIT_RETENTION_DAYS=365
