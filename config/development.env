# MYCA Development Environment Configuration
# This file configures mycocomp as the development workstation

# ==============================================
# ENVIRONMENT
# ==============================================
MAS_ENV=development
DEBUG_MODE=true
LOG_LEVEL=DEBUG

# ==============================================
# GPU CONFIGURATION (RTX 5090)
# ==============================================
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ==============================================
# LOCAL AI SERVICES
# ==============================================
# Ollama - Local LLM inference with GPU
OLLAMA_URL=http://localhost:11434
OLLAMA_MODELS=llama3.1,codellama,mistral
LLM_BASE_URL=http://localhost:11434
LLM_DEFAULT_PROVIDER=ollama

# Whisper - Speech-to-text (GPU accelerated)
WHISPER_URL=http://localhost:8765
WHISPER_MODEL=large-v3

# TTS - Text-to-speech
TTS_URL=http://localhost:5500
ELEVENLABS_PROXY_URL=http://localhost:5501

# ==============================================
# NAS STORAGE (UDM Pro 26TB)
# ==============================================
# Windows mapped drive
NAS_STORAGE_PATH=M:\
NAS_MOUNT_POINT=M:\

# Docker/WSL2 path (if using WSL)
# NAS_STORAGE_PATH=/mnt/m

# Specific paths
NAS_DATABASES_PATH=M:\databases
NAS_KNOWLEDGE_PATH=M:\knowledge
NAS_AGENTS_PATH=M:\agents
NAS_DEV_PATH=M:\dev
NAS_SHARED_PATH=M:\shared

# ==============================================
# LOCAL DATABASES (Development)
# ==============================================
# PostgreSQL - Local dev instance
DATABASE_URL=postgresql://mas:mas@localhost:5433/mas
POSTGRES_USER=mas
POSTGRES_PASSWORD=mas
POSTGRES_DB=mas

# Redis - Local dev instance
REDIS_URL=redis://localhost:6390

# Qdrant - Vector database
QDRANT_URL=http://localhost:6345

# ==============================================
# INTEGRATION DATABASES
# ==============================================
# MINDEX - Species/knowledge search
MINDEX_DATABASE_URL=postgresql://mindex:mindex@localhost:5432/mindex
MINDEX_API_URL=http://localhost:8000

# NatureOS - Earth simulator
NATUREOS_API_URL=http://localhost:8002
NATUREOS_DATABASE_URL=postgresql://natureos:natureos@localhost:5435/natureos

# ==============================================
# PRODUCTION ACCESS (Read-only for testing)
# ==============================================
# Production MYCA API (on Proxmox)
PROD_MAS_URL=http://192.168.0.100:8001
PROD_MAS_READONLY=true

# ==============================================
# N8N WORKFLOW AUTOMATION
# ==============================================
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_URL=http://localhost:5678/api/v1
N8N_BASIC_AUTH_ACTIVE=false

# ==============================================
# VOICE SERVICES
# ==============================================
VOICE_ENABLED=true
VOICE_DEFAULT_ENGINE=elevenlabs
ELEVENLABS_VOICE_ID=aEO01A4wXwd1O8GPgGlF

# ==============================================
# DEVELOPMENT FEATURES
# ==============================================
# Hot reload
WATCHFILES_FORCE_POLLING=true

# Enable all debug endpoints
ENABLE_DEBUG_ENDPOINTS=true

# Agent development mode
AGENT_DEV_MODE=true
AGENT_HOT_RELOAD=true

# Skip certain validations in dev
SKIP_SSL_VERIFY=true
SKIP_AUTH_CHECK=false

# ==============================================
# PROXMOX ACCESS (for VM management testing)
# ==============================================
PROXMOX_HOST_BUILD=192.168.0.202
PROXMOX_HOST_DC1=192.168.0.2
PROXMOX_HOST_DC2=192.168.0.131
PROXMOX_PORT=8006

# ==============================================
# UNIFI ACCESS
# ==============================================
UNIFI_HOST=192.168.0.1
UNIFI_PORT=443

# ==============================================
# MYCOBRAIN DEVICES
# ==============================================
MYCOBRAIN_ENABLED=true
MYCOBRAIN_UART_PORT=COM5
MYCOBRAIN_BAUD_RATE=115200
