{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/components/*": [
        "./components/*"
      ]
    },
    "baseUrl": ".",
    "maxNodeModuleJsDepth": 1
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "middleware.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "venv*",
    ".venv",
    "venv",
    "ENV",
    "__pycache__",
    "*.pyc",
    ".pytest_cache",
    "htmlcov",
    ".mypy_cache",
    ".tox",
    "logs",
    "*.log",
    "data",
    "firmware",
    "docker",
    "grafana",
    "prometheus",
    "redis",
    "n8n",
    "mycosoft_mas",
    "orchestrator-myca",
    "unifi-dashboard",
    "WEBSITE",
    "infra",
    "migrations",
    "models",
    "contracts",
    "services",
    "agents",
    "scripts",
    "tests",
    "docs",
    "plugins",
    "secrets",
    "speech",
    "static",
    "tsconfig.tsbuildinfo"
  ]
}
