{
  "permissions": {
    "deny": [
      "Bash(rm -rf *)",
      "Bash(docker rm *)",
      "Bash(DROP TABLE *)",
      "Bash(DELETE FROM *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/validate-coding-command.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/auto-lint.sh"
          }
        ]
      }
    ]
  }
}
