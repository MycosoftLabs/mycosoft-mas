FROM python:3.13-slim

WORKDIR /app

# Install minimal deps
RUN pip install --no-cache-dir fastapi uvicorn httpx python-multipart

# Copy proxy script
COPY mycosoft_mas/services/elevenlabs_proxy.py /app/elevenlabs_proxy.py

# Run proxy
CMD ["uvicorn", "elevenlabs_proxy:app", "--host", "0.0.0.0", "--port", "8000"]
