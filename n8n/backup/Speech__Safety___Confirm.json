                  {
                      "parameters":  {
                                         "jsCode":  "// Flexible confirmation validation for voice input\nconst phrase = ($json.confirmation_phrase || \u0027\u0027).toLowerCase().trim();\nconst requestId = $json.request_id || \u0027\u0027;\n\n// Normalize: remove extra spaces, punctuation\nconst normalized = phrase.replace(/[^a-z0-9\\s]/g, \u0027\u0027).replace(/\\s+/g, \u0027 \u0027);\n\n// Accept multiple confirmation formats for natural voice input\nconst validPhrases = [\n  \u0027confirm\u0027,\n  \u0027yes confirm\u0027,\n  \u0027confirmed\u0027,\n  \u0027proceed\u0027,\n  \u0027yes proceed\u0027,\n  \u0027confirm and proceed\u0027,\n  \u0027confirm action\u0027,\n  \u0027yes\u0027,\n  \u0027do it\u0027,\n  \u0027go ahead\u0027,\n  \u0027execute\u0027,\n  \u0027approve\u0027,\n  \u0027approved\u0027,\n  `confirm ${requestId}`,\n  `confirm action ${requestId}`,\n  `confirm request ${requestId}`\n];\n\n// Check if any valid phrase is contained in the input\nconst isValid = validPhrases.some(valid =\u003e {\n  const normalizedValid = valid.toLowerCase().replace(/[^a-z0-9\\s]/g, \u0027\u0027).replace(/\\s+/g, \u0027 \u0027);\n  return normalized.includes(normalizedValid) || normalizedValid.includes(normalized);\n});\n\nreturn {\n  ...($json),\n  is_confirmed: isValid,\n  normalized_phrase: normalized,\n  validation_method: \u0027flexible_voice\u0027\n};"
                                     },
